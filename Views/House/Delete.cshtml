@model House


<h2>Delete House</h2>

<h3>Are you sure you want to delete this House?</h3>

<div>

    <h4>House</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">House Id</dt>
        <dd class="col-sm-10">@Model.HouseId</dd>

        <dt class="col-sm-2">Owner Name</dt>
        <dd class="col-sm-10">
            @if (Model.Owner != null)
            {
                @Model.Owner.Name
            }
            else
            {
                <span class="text-danger">N/A</span>
            }
        </dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Rooms</dt>
        <dd class="col-sm-10">@Model.Rooms</dd>

        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">@Model.ImageUrl</dd>

        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">@Model.IsAvailable</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.HouseId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>