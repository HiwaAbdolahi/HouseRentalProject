@model House

<h2>Create New House</h2>

<div asp-validation-summary="All" class="text-danger"></div>  <!--Viser sammendrag av feilvalideringene og viser til brukeren her oppe -->



<!--Owner Id må være samme som den som vi har i databasen ellers du kan ikke lage noe-->
<!--Etter på kan jeg oppdatere om de skriver navn eller velger mellom den som vi har fra db-->
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="OwnerId" class="control-label">Owner:</label>
        <select asp-for="OwnerId" asp-items="ViewBag.OwnerList" class="form-control">
            <option value="">-- Select an Owner --</option>
        </select>
        <span asp-validation-for="OwnerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label><span class="text-danger">*</span>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label><span class="text-danger">*</span>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rooms"></label><span class="text-danger"></span>
        <input asp-for="Rooms" class="form-control" />
        <span asp-validation-for="Rooms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label><span class="text-danger"></span>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable"></label>
        <div class="form-check">
            <input asp-for="IsAvailable" class="form-check-input" type="radio" value="available" id="availableRadio">
            <label class="form-check-label" for="availableRadio">Available</label>
        </div>
        <div class="form-check">
            <input asp-for="IsAvailable" class="form-check-input" type="radio" value="not available" id="notAvailableRadio">
            <label class="form-check-label" for="notAvailableRadio">Not Available</label>
        </div>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Table" class="btn btn-secondary">Back to Table View</a>
</form>