@model House

<h2>Update House</h2>

<form asp-action="Update">
    <input type="hidden" asp-for="HouseId" />   <!-- både HouseId og Owner Id må være hidden-->
    <input type="hidden" asp-for="OwnerId" />
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rooms"></label>
        <input asp-for="Rooms" class="form-control" />
        <span asp-validation-for="Rooms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable"></label>
        <div class="form-check">
            <input asp-for="IsAvailable" class="form-check-input" type="radio" value="available" id="availableRadio">
            <label class="form-check-label" for="availableRadio">Available</label>
        </div>
        <div class="form-check">
            <input asp-for="IsAvailable" class="form-check-input" type="radio" value="not available" id="notAvailableRadio">
            <label class="form-check-label" for="notAvailableRadio">Not Available</label>
        </div>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Table" class="btn btn-secondary">Cancel</a>

</form>