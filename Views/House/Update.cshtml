@model HouseRental.ViewModel.HouseUploadViewModel

<h2>Update House</h2>
<div asp-validation-summary="All" class="text-danger"></div>


<form asp-action="Update" enctype="multipart/form-data">
    <input type="hidden" asp-for="HouseId" />
    <input type="hidden" asp-for="OwnerId" />

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rooms"></label>
        <input asp-for="Rooms" class="form-control" />
        <span asp-validation-for="Rooms" class="text-danger"></span>
    </div>

    <!-- 🖼️ Viser eksisterende bilder -->
    <div class="form-group">
        <label>Existing Images</label>
        <div class="d-flex flex-wrap">
            @if (Model.ExistingImages != null && Model.ExistingImages.Any())
            {
                @foreach (var image in Model.ExistingImages)
                {
                    <div class="p-2">
                        <img src="@image.ImageUrl" class="img-thumbnail" width="100" />
                    </div>
                }
            }
            else
            {
                <p>No images available</p>
            }


        </div>
    </div>

    <!-- 📂 Opplastingsfelt for nye bilder -->
    <div class="form-group">
        <label for="houseImages">Upload New Images</label>
        <input asp-for="Images" class="form-control" type="file" multiple accept="image/*" />
<span asp-validation-for="Images" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="IsAvailable"></label>
        <div class="form-check">
            <input asp-for="IsAvailable" class="form-check-input" type="radio" value="true" id="availableRadio">
            <label class="form-check-label" for="availableRadio">Available</label>
        </div>
        <div class="form-check">
            <input asp-for="IsAvailable" class="form-check-input" type="radio" value="false" id="notAvailableRadio">
            <label class="form-check-label" for="notAvailableRadio">Not Available</label>
        </div>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>



    <!-- 🔥 Nye felt for Beskrivelse, Fasiliteter, Nabolagsinfo -->
    <div class="form-group">
        <label asp-for="Beskrivelse"></label>
        <textarea asp-for="Beskrivelse" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Beskrivelse" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fasiliteter"></label>
        <textarea asp-for="Fasiliteter" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Fasiliteter" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nabolagsinfo"></label>
        <textarea asp-for="Nabolagsinfo" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Nabolagsinfo" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Table" class="btn btn-secondary">Cancel</a>
</form>
