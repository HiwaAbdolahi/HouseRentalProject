@model Renter

<h2>Delete Renter</h2>

<h3>Are you sure you want to delete this Renter?</h3>

<div>
    <h4>Renter</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Renter Id</dt>
        <dd class="col-sm-10">@Model.RenterId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">House</dt>
        <dd class="col-sm-10">@Model.HouseId</dd>
    </dl>



    <form asp-action="DeleteConfirmed" asp-route-id="@Model.RenterId" method="post">
        <!-- Dette er hvor vi kaller metoden DeleteConfirmed -->
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>
