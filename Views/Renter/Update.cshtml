@model Renter

<h2>Update Renter</h2>
<div asp-validation-summary="All" class="text-danger"></div>  <!--Viser sammendrag av feilvalideringene og viser til brukeren her oppe -->

<form asp-action="Update">          
    <input type="hidden" asp-for="RenterId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HouseId" class="control-label">House:</label>
        <select asp-for="HouseId" asp-items="ViewBag.HouseList" class="form-control">
            <option value="">-- Select a House --</option>
        </select>
        <span asp-validation-for="HouseId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Table" class="btn btn-secondary">Cancel</a>
</form>



