@model Owner


<h2>Delete Owner</h2>

<h3>Are you sure you want to delete this Owner?</h3>

<div>

    <h4>Owner</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Customer Id</dt>
        <dd class="col-sm-10">@Model.OwnerId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Adress</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Houses</dt>
        <dd class="col-sm-10">

            @if (Model.Houses != null && Model.Houses.Any())
            {
                <ul>
                    @foreach (var house in Model.Houses)
                    {
                        <li>
                            House @house.HouseId
                            <img src="@house.ImageUrl" alt="House Image" style="max-width: 100px; max-height: 100px" />
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No Houses available</p>
            }

        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.OwnerId" method="post">
        <!--Dette er der kaller vi metoden DeleteConfirmed -->
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>
