<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - House Rental</title>

    <!-- 🎨 CSS-stiler -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/Grid.css" />
    <link rel="stylesheet" href="/css/Table.css" />
    <link rel="stylesheet" href="/css/Layout.css" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />

    <!-- 🛠️ JavaScript -->
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>

<body class="background">

    <!-- 🌙 Dark Mode Toggle -->
    <button id="dark-mode-toggle" class="toggle-mode">
        <i class="fas fa-moon"></i>
    </button>

    <!-- 🌟 Profesjonell Navbar -->
    <header class="header">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <!-- LOGO -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    🏠 HOUSE RENTAL
                </a>

                <!-- 🔽 Burger-meny for mobil -->
                <button class="navbar-toggler dark-mode-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- 📌 Meny-lenker -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="House" asp-action="Table">House</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Owner" asp-action="Table">Owner</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Renter" asp-action="Table">Renter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="LeaseAgreement" asp-action="Table">LeaseAgreement</a>
                        </li>
                    </ul>

                    <!-- 🔑 Login-knapp -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- 🚀 Hovedinnhold -->
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </main>
    </div>

    <!-- 📌 Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year House Rental. All rights reserved.</p>
        </div>
    </footer>

    <!-- 🌙 Dark Mode Script -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const darkModeToggle = document.getElementById("dark-mode-toggle");
            const body = document.body;

            // Sjekk om LocalStorage har dark mode aktivert
            if (localStorage.getItem("dark-mode") === "true") {
                body.classList.add("dark-mode");
            } else {
                body.classList.remove("dark-mode");
            }

            // Hvis knappen finnes, oppdater ikonene
            if (darkModeToggle) {
                updateDarkModeIcon();
            }

            // Bytt modus ved klikk
            if (darkModeToggle) {
                darkModeToggle.addEventListener("click", function () {
                    body.classList.toggle("dark-mode");

                    // Lagre valget i Local Storage
                    localStorage.setItem("dark-mode", body.classList.contains("dark-mode"));

                    // Oppdater ikon
                    updateDarkModeIcon();
                });
            }

            // Funksjon for å oppdatere ikon på dark-mode-knappen
            function updateDarkModeIcon() {
                if (body.classList.contains("dark-mode")) {
                    darkModeToggle.innerHTML = '<i class="fas fa-sun"></i>'; // Sol for lys modus
                } else {
                    darkModeToggle.innerHTML = '<i class="fas fa-moon"></i>'; // Måne for mørk modus
                }
            }
        });
    </script>

</body>
</html>
